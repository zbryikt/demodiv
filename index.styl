@import 'generic.styl'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  max-width: 1024px
  margin: 20px
  font-size: 1.2em
  margin: 20px auto

#landing
  width: 100%
  height: 100%
  background: url(img/cover.jpg) center center no-repeat fixed
  background-size: cover
  box-shadow: inset 0 0 200px rgba(0,0,0,0.4)
  .inner
    width: 100%
    height: 100%
    background: url(img/firefly.svg) rgba(255,255,255,0.2) center center

.banner
  h1
    font-size: 4em
    margin-bottom: 10px
  h3
    font-size: 2.2em
    margin: 0 0 20px 20px
  p
    font-size: 1.3em
  width: 600px
  height: 280px
  text-shadow: 0 0 3px rgba(255,255,255,1)
